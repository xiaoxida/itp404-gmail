<form onsubmit={{action "createEmail"}}>
  <div>
    <label for="from">From: </label>
    {{input type="text" id="from" value=from}}
  </div>

  <div>
    <label for="to">To: </label>
    {{input type="text" id="to" value=to}}
  </div>

  <div>
    <label for="subject">Subject: </label>
    {{input type="text" id="subject" value=subject}}
  </div>

  <label for="message">Message: </label>
  <div>
    {{textarea id="message" rows="8" cols="80" value=message}}
  </div>
  <button data-test="submit" type="submit">Send</button>
</form>
